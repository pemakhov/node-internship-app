<!-- Modal Trigger -->
<a class="light-blue btn modal-trigger" href="#add-user-modal">Add</a>

<!-- Modal Structure -->
<div id="add-user-modal" class="modal left-align">
    <form action="" method="post">
        <div class="container" style="padding: 50px 0;">
            <input id="csrf-main" type="hidden" name="_csrf" value="<%= csrfToken %>">
            <input type="text" name="fullName" id="full-name" placeholder="Full Name">
            <input type="email" name="email" id="email" placeholder="Email">
            <div class="modal-footer">
                <a href="#!" class="modal-close grey darken-1 btn">Cancel</a>
                <button type="submit" class="modal-close light-blue btn">Create</button>
            </div>
        </div>
    </form>
</div>